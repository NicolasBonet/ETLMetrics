<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/clienteEspecialFrame">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:scrollbars="none" android:background="@color/white">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:orientation="vertical">


            <co.edu.uniandes.proyectoautomatizacion.util.AspectRatioImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:src="@drawable/placeholder" android:id="@+id/promoDetalleImageView"></co.edu.uniandes.proyectoautomatizacion.util.AspectRatioImageView>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/secondary_dark" android:orientation="vertical">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Titulo Promo" android:textColor="#FFF" android:gravity="center_horizontal" android:textSize="@dimen/abc_text_size_large_material" android:layout_margin="10dp" android:id="@+id/nombrePromoDetallesTextView"></TextView>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:orientation="vertical">

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Descripcion Detallada de la promocion...." android:gravity="center_horizontal" android:textSize="@dimen/abc_text_size_medium_material" android:layout_margin="10dp" android:id="@+id/descripcionPromoDetallesTextView"></TextView>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:orientation="horizontal" android:weightSum="1">

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Descargar pase" android:textSize="@dimen/abc_text_size_large_material" android:layout_gravity="center_horizontal" android:gravity="center_horizontal" android:textColor="@color/command_link" android:id="@+id/agregarCuponDetallePromoTextView"></TextView>

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true" android:id="@+id/agregarCuponDetallePromoImageView" android:layout_weight="0.5" android:visibility="gone"></ImageView>

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true" android:id="@+id/irATiendaDetallePromoImageView" android:layout_weight="0.5" android:visibility="gone"></ImageView>

            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFF" android:orientation="vertical">

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TÃ©rminos y Condiciones" android:gravity="center_horizontal" android:textSize="@dimen/abc_text_size_large_material" android:layout_margin="10dp"></TextView>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFF" android:orientation="vertical">

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Detalle sobre terminos y condiciones de la promo..." android:gravity="center_horizontal" android:textSize="@dimen/abc_text_size_medium_material" android:layout_margin="10dp" android:id="@+id/terminosPromoDetallesTextView"></TextView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>