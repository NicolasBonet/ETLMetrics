<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
   xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
         http://java.sun.com/xml/ns/persistence 
         http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"> 
	<persistence-unit name="tercerosPensionesPU"  transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.uniandes.terceros.pensiones.domain.Personas</class>
		<class>com.uniandes.terceros.pensiones.domain.Abonos</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.order_inserts" value="true"/>
			<property name="hibernate.jdbc.batch_size" value="500"/>
			<property name="org.hibernate.flushMode" value="COMMIT"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
			<property name="hibernate.connection.username" value="tercero" />
			<property name="hibernate.connection.password" value="tercero" />
			<property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521:XE" />
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver" />
			<property name="hibernate.classloading.use_current_tccl_as_parent" value="false"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
<!-- 			<property name="hibernate.id.new_generator_mappings" value="true"/> -->
		</properties>
	</persistence-unit>
</persistence>